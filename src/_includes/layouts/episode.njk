---
layout: layouts/base.njk
templateClass: episode
eleventyComputed:
  episodedate: '{{ episode.data.date }}'
---

{% include "nav.njk" %}
<main class="sub-grid">
  <h1>{{ title }}</h1>
  <div class="stack-col">
    <div>
      <p class="body-small">Episode: {{ episode_number }}</p>
      <p class="body-small">Released: {{ date | formatDate }}</p>
    </div>
    <p>{{ postDescription }}</p>
  </div>

  <figure class="episode-mp3">
    <audio controls src="{{ audio_file_relative_url }}">
      Your browser does not support the
      <code>audio</code> element.
    </audio>
    <figcaption>{{ title }}</figcaption>
  </figure>

  {{ content | safe }}

  {# {%- for tag in tags | filterTagList %} {%- set tagUrl %}/tags/{{
    tag | slugify
  }}/{% endset %}
  <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
  {%- endfor %} #} {# {%- if collections.posts %} {%- set nextPost =
  collections.posts | getNextCollectionItem(page) %} {%- set previousPost =
  collections.posts | getPreviousCollectionItem(page) %} {%- if nextPost or
  previousPost %}
  <hr />
  <ul>
    {%- if nextPost %}<li
      >Next:
      <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li
    >{% endif %} {%- if previousPost %}<li
      >Previous:
      <a href="{{ previousPost.url | url }}">{{
        previousPost.data.title
      }}</a></li
    >{% endif %}
  </ul>
  {%- endif %} {%- endif %} #}
</main>
